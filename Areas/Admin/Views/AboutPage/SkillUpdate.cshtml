

<div class="col-md-7 mx-auto">
    <form method="Post">

        <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.Id">


        <div class="form-group">
            <label for="Name">NAME</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
        </div>

        <div class="form-group">
            <label for="Level">Level</label>
            <input type="text" class="form-control" id="Level" name="Level" value="@Model.Level">
        </div>

        <div class="d-flex justify-content-between">
            <a class="btn btn-danger w-50 mt-2 mr-2" href="/Admin/Skill">Turn Back</a>
            <button type="submit" class="btn btn-success w-50 mt-2 ml-2">Update</button>
        </div>

    </form>


</div>