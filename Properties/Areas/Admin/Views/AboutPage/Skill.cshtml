<div class="col-md-8 mx-auto">

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">


        <!-- Main Content -->
        <div id="content">


            <!-- Begin Page Content -->
            <div class="container-fluid">
                
                <div class="d-flex justify-content-between">
                <a class="btn btn-danger w-50 mt-2 mb-4 mr-2" href="/Admin/About">Turn back</a>
                    <a class="btn btn-primary w-50 mt-2 mb-4 ml-2" href="/Admin/Skill/Create">New Skill</a>
                </div>

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Skill</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Level</th>
                                        <th>Settings</th>
                                     
                                    </tr>
                                </thead>
                            
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>@item.Level</td>
                                            <td>
                                                <a class="btn btn-danger " href="/Admin/Skill/Delete/@item.Id">Delete</a>
                                                <a class="btn btn-success " href="/Admin/Skill/Update/@item.Id">Update</a>

                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
   

    </div>
    <!-- End of Content Wrapper -->
</div>