  <!--/ Intro Skew Star /-->
<div class="intro intro-single route bg-image" style="background-image: url(img/overlay-bg.jpg); height: 90px;">
    <div class="overlay-mf"></div>
</div>

<!--/ Section Contact-Footer Star /-->
<section class="paralax-mf footer-paralax bg-image  route">
    <div class="overlay-mf"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="contact-mf">
                    <div id="contact" class="box-shadow-full">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="title-box-2">
                                    <h5 class="title-left">
                                        Bana Mesaj Gönderin
                                    </h5>
                                </div>
                                <div>
                                    <form  method="post" >
                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <div class="form-group">
                                                    <input type="text" name="Name" class="form-control" id="name" placeholder="isim ve soyisim" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <div class="form-group">
                                                    <input type="email" class="form-control" name="Email" id="email" placeholder="Email Adresi" data-rule="email" data-msg="Please enter a valid email" />
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" name="Title" id="Subject" placeholder="Başlık" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" />
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <div class="form-group">
                                                    <textarea class="form-control" name="Description" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Açıklama"></textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <button type="submit" class="button button-a button-big button-rouded">Messaj Gönder</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="title-box-2 pt-4 pt-md-0">
                                    <h5 class="title-left">
                                       İletişim Bilgilerim
                                    </h5>
                                </div>
                                <div class="more-info">
                               
                                    <ul class="list-ico">
                                        <li><span class="ion-ios-location"></span> @Model.Address</li>
                                        <li><span class="ion-ios-telephone"></span> @Model.Phone</li>
                                        <li><span class="ion-email"></span> @Model.Email</li>
                                    </ul>
                                </div>
                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!--/ Section Contact-footer End /-->