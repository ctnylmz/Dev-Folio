

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <form method="Post" enctype="multipart/form-data" >

                <div class="row mb-2">
                    <div class="col-9">
                        <div class="mb-2">
                            <label>Name</label>
                            <input type="text" name="Name" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label>Title</label>
                            <input type="text" name="Title" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label>Description</label>
                            <textarea rows="6" type="text" name="Description" class="form-control" ></textarea>
                        </div>
                        <div class="mb-2">
                            <label>Time</label>
                            <input type="text" name="Time" class="form-control" />
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="mb-2">
                            <img src="~/img/default.jpg" class="img-fluid" id="thumbnail" />
                        </div>
                        <div class="my-4">
                            <input type="file"  name="Thumbnail" class="custom-file" />
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a class="btn btn-danger w-50 mt-2 mr-2" href="/Admin/Certificate">Turn Back</a>
                    <button type="submit" class="btn btn-primary w-50 mt-2 ml-2">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(".custom-file").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            document.getElementById('thumbnail').src = window.URL.createObjectURL(this.files[0])
        });
    </script>
}